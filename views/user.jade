extends layout

block content
    include header
    div#user
        table
            thead
                tr
                    td 作者
                    td 关注
                    td 粉丝
            tbody
                each user in users
                    tr
                        td
                            a(href='http://www.jianshu.com' + '#{user.id}') #{user.author}
                        td
                            span #{user.following}
                        td
                            span #{user.follower}