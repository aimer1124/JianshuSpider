extends layout

block content
    block header
        table
            th
                tr
                    td
                        a(href='/') 首页
                    td
                        a(href='/article') 文章列表
                    td
                        a(href='/user') 作者
        hr
    div#user
        table
            thead
                tr
                    td 作者
                    td 关注
                    td 粉丝
            tbody
                each user in users
                    tr
                        td
                            a(href='http://www.jianshu.com' + '#{user.id}') #{user.author}
                        td
                            span #{user.following}
                        td
                            span #{user.follower}