extends layout

block content
  div
    a(href='/') Home
  div
    table
      thead
        tr
          td 文章标题
          td 作者
      tbody
        each result in results
          tr
            td
              a(href='http://www.jianshu.com' + '#{result.articleHref}') #{result.articleTitle}
            td
              a(href='http://www.jianshu.com' + '#{result.authorHref}') #{result.author}